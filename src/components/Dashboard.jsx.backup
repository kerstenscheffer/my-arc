          </button>
          <button 
            onClick={() => setActiveTab('ai-generator')}
            className={`workapp-nav-item ${activeTab === 'ai-generator' ? 'active' : ''}`}
          >
            🧠 AI Generator
          </button>
          <button 
            onClick={() => setActiveTab('analytics')}
            className={`workapp-nav-item ${activeTab === 'analytics' ? 'active' : ''}`}
          >
            📈 Analytics
          </button> <button 
  onClick={() => setActiveTab('goals')}
  className={`workapp-nav-item ${activeTab === 'goals' ? 'active' : ''}`}
>
  🎯 Goals
</button>
        </nav>

        {/* Tab Content */}
        <div className="dashboard-content">
          {activeTab === 'overview' && <OverviewTab user={user} />}
          {activeTab === 'clients' && <ClientsTab />}
          {activeTab === 'plans' && <PlansTab />}
          {activeTab === 'ai-generator' && <AIGenerator />}
          {activeTab === 'analytics' && <AnalyticsTab />}
{activeTab === 'goals' && <Goals user={user} />}        </div>
      </div>
