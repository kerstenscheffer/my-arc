                {equipmentOptions.map(eq => (
                  <label key={eq.value} className="myarc-flex myarc-items-center myarc-text-gray cursor-pointer">
                    <input 
                      type="checkbox" 
                      value={eq.value}
                      checked={equipment.includes(eq.value)}
