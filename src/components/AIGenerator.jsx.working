              {/* NEW: Apply Specific Goals Option */}
              <label className="myarc-flex myarc-items-center myarc-text-gray cursor-pointer">
                <input 
                  type="checkbox" 
                  checked={applySpecificGoals}
                  onChange={(e) => setApplySpecificGoals(e.target.checked)}
