                        {key === 'upper_lower' && 'ðŸ”„ '}
                        {key === 'ppl' && 'ðŸ”„ '}
                        {key === 'arnold' && 'ðŸ’ª '}
                        {key === 'bro' && 'ðŸŽ¯ '}
                        {key === 'ppl_x2' && 'ðŸ”¥ '}
