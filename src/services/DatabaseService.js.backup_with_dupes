  try {
    const { data, error } = await this.supabase
      .from('client_meal_overrides')
      .select('week_structure')
      .eq('client_id', clientId)
      .eq('plan_id', planId)
      .single()
    
    if (error && error.code !== 'PGRST116') throw error
